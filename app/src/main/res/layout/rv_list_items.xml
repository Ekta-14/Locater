<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/card_bg_login_details"
    android:elevation="4dp"
    android:layout_margin="10dp"
    >
        <TextView
            android:id="@+id/tv_rv_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="15:00:90"
            android:gravity="center"
            android:background="@drawable/tv_login_details"
            />
        <TextView
            android:id="@+id/tv_rv_check_in_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/tv_login_details"
            />
        <TextView
            android:id="@+id/tv_rv_check_out_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="15:00:90"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@drawable/tv_login_details"
            />

        <TextView
            android:id="@+id/tv_rv_latitude"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="15:00:90"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/tv_login_details"
            />
        <TextView
            android:id="@+id/tv_rv_longitude"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="15:00:90"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/tv_login_details"
            />

</LinearLayout>